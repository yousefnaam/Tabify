{
  "manifest_version": 3,
  "name": "Tabify",
  "description": "Tab Manager for Google Chrome",
  "version": "1.0",
  "icons": {
    "16": "/images/icon-16.png",
    "48": "/images/icon-48.png",
    "128": "/images/icon-128.png"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/icon-16-2.png",
      "48": "/images/icon-48-2.png",
      "128": "/images/icon-128-2.png"
    }
  },
  "host_permissions": ["https://developer.chrome.com/*"],
  "permissions": ["tabGroups", "tabs", "storage", "contextMenus", "sync"]
}
